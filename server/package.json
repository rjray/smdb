{
  "name": "@smdb/server",
  "version": "0.0.1",
  "description": "SMDB Server",
  "main": "dist/server.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "nodemon --delay 2 --ext yaml,js,ts -w src src/server.ts",
    "gen-keys": "openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -sha256 -days 3650 -nodes -subj \"/C=US/ST=California/CN=localhost\"",
    "lint:openapi": "spectral lint src/openapi.yaml",
    "lint": "yarn lint:openapi && yarn eslint src",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage"
  },
  "dependencies": {
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "exegesis": "^4.3.0",
    "exegesis-express": "^4.0.0",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "5.1.6",
    "ts-pattern": "^5.6.2",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@stoplight/spectral-cli": "^6.14.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.2",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.18.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.2"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "tsx"
    }
  }
}
