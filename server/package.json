{
  "name": "@smdb/server",
  "version": "0.0.1",
  "description": "SMDB Server",
  "main": "dist/server.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "nodemon --delay 2 --ext yaml,js,ts -w src src/server.ts",
    "gen-keys": "openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -sha256 -days 3650 -nodes -subj \"/C=US/ST=California/CN=localhost\"",
    "lint:openapi": "spectral lint src/openapi.yaml",
    "lint": "yarn lint:openapi && yarn eslint src",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage"
  },
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "exegesis": "^4.3.0",
    "exegesis-express": "^4.0.0",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "5.1.7",
    "ts-pattern": "^5.7.0",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@stoplight/spectral-cli": "^6.14.3",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^9.14.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.24.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "resolutions": {
    "**/@types/express": "^4"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "tsx"
    }
  }
}
