{
  "name": "@smdb/server",
  "version": "0.1.0",
  "description": "SMDB Server",
  "main": "dist/server.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "nodemon --delay 2 --ext yaml,js,ts -w src src/server.ts",
    "gen-keys": "openssl req -x509 -newkey rsa:4096 -keyout key.pem -out cert.pem -sha256 -days 3650 -nodes -subj \"/C=US/ST=California/CN=localhost\"",
    "lint:openapi": "spectral lint src/openapi.yaml",
    "lint": "yarn lint:openapi && yarn eslint src",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "csv-parse": "^5.6.0",
    "exegesis": "^4.3.0",
    "exegesis-express": "^4.0.0",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "5.1.7",
    "ts-pattern": "^5.9.0",
    "umzug": "^3.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stoplight/spectral-cli": "^6.15.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.15.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "sequelize-cli": "^6.6.5",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "tsx"
    }
  }
}
